<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="gutfud.dacs.DTO.Recipe" table="recipe" schema="gutfud">
        <composite-id class="gutfud.dacs.DTO.RecipePK">
            <key-property name="RecipeName" column="RecipeName">
            </key-property>
            <key-property name="UserName" column="UserName">
            </key-property>
        </composite-id>

        <property name="reported">
            <column name="Reported" sql-type="tinyint(1)" not-null="true"/>
        </property>
        <property name="numberOfSaved">
            <column name="NumberOfSaved" sql-type="int" not-null="false"/>
        </property>
        <property name="datePublish">
            <column name="DatePublish" sql-type="date" not-null="false"/>
        </property>

    </class>
</hibernate-mapping>