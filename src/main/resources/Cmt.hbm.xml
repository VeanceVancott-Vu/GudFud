<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="gutfud.dacs.DTO.Cmt" table="cmt" schema="gutfud">
        <composite-id class="gutfud.dacs.DTO.CmtPK">
            <key-property name="RecipeName" column="RecipeName">
            </key-property>
            <key-property name="UserName" column="UserName">
            </key-property>
            <key-property name="Content" column="Content">
            </key-property>
            <key-property name="CmtUserName" column="CmtUserName">
            </key-property>
        </composite-id>
        <property name="DateCmt">
            <column name="DateCmt" sql-type="Date" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>